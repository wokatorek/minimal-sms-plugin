<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="minimal-sms-plugin" version="0.0.1">
    <name>MinimalSMSPlugin</name>
    <author>wokatorek</author>
    <description>Minimal SMS plugin</description>
    <license>MIT</license>
    <keywords>cordova,sms</keywords>
    <js-module src="www/sms.js" name="sms">
        <clobbers target="sms" />
    </js-module>
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="sms">
                <param name="android-package" value="pl.wokatorek.cordova.plugin.sms.SmsPlugin"/>
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
    		    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    			  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    		    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    		    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
    		    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    		    <uses-permission android:name="android.permission.READ_SMS" />
    		    <uses-permission android:name="android.permission.WRITE_SMS" />
    		    <uses-permission android:name="android.permission.SEND_SMS" />
        </config-file>
        <source-file src="src/android/MinimalSMSPlugin.java" target-dir="src/pl/wokatorek/cordova/plugin/sms"/>
    </platform>
</plugin>
